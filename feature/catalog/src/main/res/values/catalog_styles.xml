<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextAppearance.Title" parent="@android:style/TextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@fonts/worksans_bold</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="@android:style/TextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@fonts/worksans_regular</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:textAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.Toolbar.Main" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@fonts/worksans_regular</item>
        <item name="fontFamily">@fonts/worksans_regular</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@fonts/worksans_bold</item>
        <item name="fontFamily">@fonts/worksans_bold</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.CollapsingToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>